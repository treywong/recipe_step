$("#list").html("");
$("#search-result").html("");
var first_option = document.createElement("option");
first_option.innerHTML = "Select Here...";
$("#list").append(first_option);

<% @recipe.each do |r| %>
  var option = document.createElement("option");
  option.value = '/recipes/<%= r.id %>';
  option.innerHTML = "<%= r.name %> (<%= r.user.username %>)";

  //append option to list
  $("#list").append(option);

  //Add the search result in "search-result" id
  var a = document.createElement("a")

  var card = document.createElement("div");
  
  var title = document.createElement("h2");
  title.innerHTML = "<%= r.name %> (<%= r.user.username %>)";

  var p = document.createElement("p");
  p.innerHTML = "<%= sanitize r.description %>";

  card.append(title);
  card.append(p);
  a.append(card);
  $("#search-result").append(a);
  $( "div:last" ).addClass( "card card_box border-primary" );
  $( "h2:last" ).addClass( "card-title" );
  $( "p:last" ).addClass( "card-text" );
  $( "a:last" ).attr("href", "/recipes/<%= r.id %>").addClass( "custom-card" );
<% end %>